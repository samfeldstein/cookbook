---
// Layout
import BaseLayout from "./BaseLayout.astro";
import Tags from "../components/Tags.astro";

// Utils
import { getCollection } from "astro:content";
import { sortCollectionByDate } from "../scripts/utils";

// Collections
const recipes = await getCollection("recipes");
sortCollectionByDate(recipes);
const tags = [...new Set(recipes.map((recipe) => recipe.data.tags).flat())];

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <header id="page-header">
    <h1>{frontmatter.title}</h1>
  </header>
  <slot />
  <section>
    <h2>Recently Added</h2>
    <ol>
      <a href={`/recipes/${recipes[0].slug}`}>{recipes[0].data.title}</a>
      <a href={`/recipes/${recipes[1].slug}`}>{recipes[1].data.title}</a>
      <a href={`/recipes/${recipes[2].slug}`}>{recipes[2].data.title}</a>
    </ol>
  </section>
  <section>
    <h2>Categories</h2>
    <Tags tags={tags.sort()} path="recipes" />
  </section>
</BaseLayout>

<style>
  ol {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
