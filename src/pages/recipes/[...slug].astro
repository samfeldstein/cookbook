---
// This page generates each recipe
// https://docs.astro.build/en/tutorials/add-content-collections/#generate-pages-from-a-collection

import { getCollection } from "astro:content";
import Recipe from "../../layouts/Page.astro";

export async function getStaticPaths() {
  const recipes = await getCollection("recipes");
  return recipes.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Recipe frontmatter={entry.data}>
  <Content />
</Recipe>
